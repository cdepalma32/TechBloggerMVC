      <nav>
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <a href="/profile" class="btn btn-outline-primary">Profile</a>
        <button class="btn btn-outline-secondary" id="logout">Logout</button>
        <a href="/dashboard" class="btn btn-outline-success">Dashboard</a>
        {{else}}
        <a href="/login" class="btn btn-outline-primary">Login</a>
        {{/if}}
      </nav>
    </header>
    
    <main class="container my-5">
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>
    
    <footer class="mt-auto py-3 border-top">
      <div class="container text-center">
        <span class="text-muted">Â© 2024 Tech Blogger MVC!</span>
      </div>
    </footer>
  </div>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
  
  <!-- jQuery, Popper.js, and Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
